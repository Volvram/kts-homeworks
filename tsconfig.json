{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
     "components": ["components"],
     "pages": ["pages"],
     "config": ["config"],
     "styles": ["styles"],
     "store": ["store"],
     "utils": ["utils"],
     "assets": ["assets"],
    },
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*", "declaration.d.ts"],
  "exclude": ["node_modules"],
 }